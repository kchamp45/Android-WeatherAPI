<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.weatherapi.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a zip code to get the weather in your area!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/findWeatherButton"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/zip_code_hint"
        android:padding="5dp"
        android:background="@color/colorTextIcons"
        tools:layout_editor_absoluteY="366dp"
        tools:layout_editor_absoluteX="85dp" />

    <Button
        android:id="@+id/findWeatherButton"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Get Weather"
        android:textColor="@color/colorTextIcons"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteY="366dp"
        tools:layout_editor_absoluteX="154dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
